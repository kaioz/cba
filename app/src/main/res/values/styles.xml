<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/listItemBackground</item>
        <item name="actionBarStyle">@style/CBAActionBar</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/CBAActionBar</item>
    </style>

    <style name="ListView">
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="android:divider">@color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@drawable/standard_selector</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="CBAActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="account_header_greytext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">@dimen/account_image_width</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/greyText</item>
    </style>

    <style name="section_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
